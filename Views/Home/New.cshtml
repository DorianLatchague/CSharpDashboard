@{
    ViewData["Title"] = "New User";
}
<div class="container">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand">Test App</a>
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="nav-link" href="/dashboard">Dashboard</a>   
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="/selfedit">Profile</a>
            </li>
        </ul>
        <a href="/logout" class="nav-item active nav-link my-2 my-lg-0">Log Out</a>
    </nav>
    <h1 style="display: inline-block">Add a new user</h1>
    <a href="/dashboard" style="float: right; margin-top: 10px;" class="btn btn-outline-primary">Return to Dashboard</a>
    @model User
    <form style="margin-top: 10px;" asp-action="Add" asp-controller="Home" method="post">
        <p style="color: red;" asp-validation-for="Email"></p>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">Email Address:</span>
            </div>
            <input asp-for="Email" type="text" class="form-control" placeholder="example@example.com">
        </div>
        <p style="color: red" asp-validation-for="FirstName"></p>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">First Name:</span>
            </div>
        <input asp-for="FirstName" type="text" placeholder="At least 2 characters, only letters" class="form-control">
        </div>
        <p style="color: red;" asp-validation-for="LastName"></p>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon3">Last Name:</span>
            </div>
            <input asp-for="LastName" type="text" placeholder="At least 2 characters, only letters" class="form-control">
        </div>   
        <p style="color: red;" asp-validation-for="Password"></p>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">Password:</span>
            </div>
            <input asp-for="Password" type="password" placeholder="At least 8 characters" class="form-control">
        </div>
        <p style="color: red;" asp-validation-for="PassConf"></p>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">Password Confirmation:</span>
            </div>
        <input asp-for="PassConf" type="password" placeholder="Same as password" class="form-control">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Create</button>
        </div>
    </form>
</div>